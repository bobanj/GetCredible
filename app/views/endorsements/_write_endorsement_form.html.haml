= simple_form_for([@user, endorsement], remote: true, html: {id: 'write_endorsement_form', class:"add-endorsement #{hide ? 'hide' : '' }" }) do |f|
  %p.info If one word or phrase isn't enough, offer a little insight into why you tagged this profile the way you did.
  = f.input :user_tag_id, as: :select, collection: load_user_tags(@user), label: false, input_html:{id: 'write_endorsement_user_tag_id', :'data-placeholder' => "Choose a tag to endorse"}
  = f.input :description, label: false, input_html:{id: 'write_endorsement_description', placeholder: "Write your endorsement here", rows: 2}
  = hidden_field_tag :write_endorsement, true
  %span.hint.right
    %span#write_endorsement_word_counter 300
    characters remaining
  .buttons
    = f.button :submit, "Endorse", class: 'btn primary small'
    -#%span.inline
    -#  = link_to 'Cancel', '#', id: 'write_endorsement_cancel', class: 'cancel'
    %span.loader.inline.hide
      = image_tag 'ajax_loader.gif'
