= render 'twitter_invite'

#content
  %section#twitter_contacts.listing-wrap
    %header#page-header

      %h1 Invite & Tag
      %ul.horizontal.right
        - if current_user.twitter_id.blank?
          %li= link_to "Import Twitter friends", twitter_contacts_path, class: "twitter-import", title: "Import your Twitter friends"

    %p.info You can invite your contacts one by one by entering their email addresses, or authorize us to access your Twitter contacts and invite more at once.

    = render 'email_invite'

    - if @contacts.present?
      .search_listing
        = form_tag invite_path, :class => "left", remote: true, method: :get do
          %p
            = label_tag :q, "Search", class: 'hidden'
            = text_field_tag :q, params[:q]
            = submit_tag :search, value: "Search", name: nil
        %ul.horizontal.right
          %li= link_to "Disconnect from Twitter", twitter_session_path, :confirm => "Are you sure you want to disconnect your Twitter account?", :method => :delete, :class => "btn primary small light"

    %hr.divider
    #js-twitter-contacts-list.twitter-contacts-list.listing
      - if @contacts.present?
        = render 'contacts', :contacts => @contacts, :users => @users
      - else
        .ngo
          %p== Import your #{link_to "Twitter contacts", twitter_contacts_path} and send invites by DM.

%aside
  = render 'shared/sidebar_nav'
  = render 'shared/friend_nav', user: current_user
