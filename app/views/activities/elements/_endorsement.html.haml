%li{:class => "endorsement #{activity_item_class(activity_item)}"}
  .content
    .tag-icon
    = render 'activities/elements/photo', activity_item: activity_item
    %h2= activity_description(activity_item)

    .activity_details
      %p= activity_item.item.description

    %time= activity_item.created_at.strftime("%d. %b %Y")
