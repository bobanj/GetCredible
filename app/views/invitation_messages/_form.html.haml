= simple_form_for(invitation_message, url: invitation_messages_path, remote: true, html: {id: 'js-invitation-message-form', method: :post }) do |f|
  %ul.inputs-list
    = f.input :uid, id: 'js-contact-uid', readonly: true, as: :hidden
    = f.input :provider, id: 'js-contact-provider', readonly: true, as: :hidden
    = f.input :name, id: 'js-contact-name', readonly: true, as: :hidden
    = f.input :screen_name, id: 'js-contact-screen-name', readonly: true, as: :hidden
    %li= f.input :tag1, placeholder: "First tag", label: "First tag", label_html: {class: 'hidden'}
    %li= f.input :tag2, placeholder: "Second tag", label: "Second tag", label_html: {class: 'hidden'}
    %li= f.input :tag3, placeholder: "Third tag", label: "Third tag", label_html: {class: 'hidden'}
    %li.buttons
      = f.submit :send_dm, value: "Send Message", class: "btn primary large"
      .loading{style: "display: none"} loading...
