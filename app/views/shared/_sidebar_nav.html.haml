%nav#profile-nav
  .photo
    = link_to image_tag(current_user.avatar_url(:avatar)), edit_user_registration_path, :id => 'user_avatar_sidebar'
    - if show_guide?(current_user, params[:show_guide])
      = link_to image_tag("indicator.png"), nil, id: 'show_guide'

  .my-actions
    %h3
      = "Welcome #{link_to(current_user.short_name, edit_user_registration_path)}".html_safe
    .view
      = link_to 'Invite & Tag', people_invite_path

%nav#friend-nav
  %ul
    %li
      = link_to people_path do
        %span= current_user.supporters_count
        Tagged Me
    %li
      = link_to people_supported_path do
        %span= current_user.supported_count
        I've Tagged

/= render 'shared/trending_tags'
