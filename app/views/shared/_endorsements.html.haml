%section#endorsements
  %hr.divider.strong
  #tag-listing.listing-wrap
    #page-header.gray
      %h1 Tag Breakdown & Endorsements

      .tag-search.right
        = form_tag people_invite_path, remote: true, method: :get do
          %p
            = text_field_tag :q, params[:q]
            = submit_tag :search, value: "Search", name: nil

    .listing
      %ul
        - @user_tags.each do |user_tag|
          - rank = user_tag.rank.value
          %li{id: "endorse_#{user_tag.id}_container"}
            %span.score= user_tag.score.value || 1
            %span.name= user_tag.tag.name
            - if rank
              %span.user="##{rank} out of #{user_tag.incoming.value}"
            %span.endorse
              = link_to "Endorse this tag", "#", class: "js-endorse-tag action"
              = link_to "Show 3 endorsements", "#"
            .tag-endorse-text
              %p Write an endorsement:
              %textarea
              %input{ :type => "Submit", :class => "btn primary" }
            - if user_tag.endorsements.any?
              %ul.tag-endorse
                - user_tag.endorsements.each do |endorsement|
                  %li
                    = endorsement.description
                    %span
                      Written by
                      = link_to endorsement.endorser.short_name, endorsement.endorser
                      = time_ago_in_words(endorsement.created_at)

