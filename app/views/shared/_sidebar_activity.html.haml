- if user
  - incoming_activities =  user.incoming_activities.paginate(:page => 1, :per_page => 5)
  - if incoming_activities.count > 0
    #latest-activity
      - if current_user && current_user == user
        %h2 Your incoming activity
      - else
        %h2 Latest incoming activity
      %ul.unstyled
        - incoming_activities.each do |activity_item|
          %li{:class => activity_class(activity_item)}
            -#%span.icon
            = activity_description(activity_item)
      = link_to 'View all incoming activity â–º', incoming_user_path(user), :class => 'js-remote'