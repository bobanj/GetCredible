%section.devise.sign_in
  %header#page-header
    %h1 Sign In

  = simple_form_for(:user, :url => user_session_path, :namespace => 'sign_in', :html => {:id => 'user_sign_in'}) do |f|
    %ul.inputs-list
      %li= f.input :email, :required => false, :autofocus => true, :input_html => { :value => nil }, :placeholder => "Email or Username", :label => "Email or Username"
      %li= f.input :password, :required => false, :input_html => { :value => nil }
      %li.checkboxes= f.input :remember_me, :as => :boolean
      %li.buttons_left= f.button :submit, "Sign in", class: 'btn large primary'
    %br
