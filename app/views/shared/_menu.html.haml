%nav
  %ul#global-nav
    %li#gn-logo
      = link_to 'GetCredible', root_path
    - if user_signed_in?
      %li#gn-activity
        = link_to 'Activity feed', home_activity_path
      %li#gn-profile
        = link_to 'Profile', user_path(current_user)
      %li#gn-logout
        = link_to "Logout", destroy_user_session_path
    - else
      %li#gn-login
        = link_to 'Login', new_user_session_path
#global-search
  = form_tag users_path, :id => 'g-search', :method => :get do
    = label_tag :q, "Search"
    = text_field_tag :q, '', :id => 'g-searchtext', :placeholder => 'Search people'
    %button go
