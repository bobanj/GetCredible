%section#tags
  #add-tag
    .inner{:class => (false && @user == current_user) ? "cannot_tag" : nil}
      = form_tag user_user_tags_path(@user) do
        = text_field_tag :tag_names, '', :placeholder => 'e.g. web design, leadership (comma separated)', :class => 'large', :id => 'tag_names'

        %button.btn.primary.large Tag 'em!
      - if @user == current_user
        .vouche You can always add more tags in field above. Use comma ( , ) for multi-tagging.
      - else
        .vouche ... or <strong>add a tag</strong> below to vouch for it yourself!
    .arrow
  = image_tag "ajax_loader.gif", :id => 'tag-could-loader', :style => "display:none;"


  -#- if @user.user_tags.blank? && current_user == @user
  -#  = render :partial => 'shared/no_tags'
  -#- else current_user

  

  .ngo.positioned
    %p#js_no_tags{:style => (@user.user_tags.blank? ? 'display: none' : nil)} This profile has not been branded yet. Be the first to brand it.
    
  .edit-area
    - if user_signed_in? && @user == current_user
      = link_to 'Edit', '#', id: 'edit_tag_cloud', :class => 'edit-button btn primary small light'
    %div{:id => 'tag-cloud',
         "data-tag-cloud-path" => user_user_tags_path(@user),
                    :"data-user-name" => @user.username.to_s,
                    :"data-logged-in" => user_signed_in?.to_s,
                    :"data-can-vote" => (@user != current_user).to_s,
                    :"data-can-tag" => "true",
                    :"data-can-delete" => 'false',
                    :"data-user" => {:full_name => @user == current_user ? 'yourself' : @user.full_name}.to_json}
  #tag-msg
    %span.icon
    = tag_cloud_summary(@user)
