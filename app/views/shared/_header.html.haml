%header#global-header
  %nav
    %ul#global-nav
      - if user_signed_in?
        %li#gn-logo
          = link_to 'GiveBrand', activity_path('all')
        %li#gn-logout
          = link_to "Logout", destroy_user_session_path
        %li#gn-profile
          = link_to 'Profile', me_user_path(current_user), :class => ((params[:controller] == 'users' && params[:action] == 'show') || (params[:controller] == 'users/registrations') ? 'active' : nil)
        %li#gn-activity
          = link_to 'Home', activity_path('all'), :class => (params[:controller] == 'activities' ? 'active' : nil)
      - else
        %li#gn-logo
          = link_to 'GiveBrand', root_path
        %li#gn-register
          = link_to "Sign up", new_user_registration_path, :class => (params[:controller] == 'users/registrations' ? 'active' : nil)
        %li#gn-login
          = link_to 'Login', new_user_session_path, :class => (params[:controller] == 'users/sessions' ? 'active' : nil)

  #global-search
    = form_tag users_path, :id => 'g-search', :method => :get do
      = label_tag :q, "Search"
      = text_field_tag :q, '', :id => 'g-searchtext', :placeholder => 'Search people or tag'
      %button go
