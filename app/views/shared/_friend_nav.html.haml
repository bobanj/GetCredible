%nav#friend-nav
  - if user_signed_in? && current_user != user
    .js-friendship-wrapper
      - if current_user.following?(user)
        = link_to 'Unfollow', user_friendship_path(user, :current), class: 'js-friendship-action button btn primary red tiny', method: 'delete', remote: true
      - else
        = link_to 'Follow', user_friendships_path(user), class: 'js-friendship-action  button btn primary green tiny', method: 'post', remote: true

      = image_tag 'ajax_loader.gif', width: 14, height: 14, class: 'hide'

  %ul
    %li
      = link_to user_following_path(user) do
        %span= user.followings.count
        Following
    %li
      = link_to user_followers_path(user) do
        %span= user.followers.count
        Followers

  - if user_signed_in? && (user.blank? || user == current_user)
    = link_to 'Invite and Tag Your Contacts', invite_path, class: 'invite'
