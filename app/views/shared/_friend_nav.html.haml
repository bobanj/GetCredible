- links_count = user.links.length
- following_count = user.followings.active.count
- followers_count = user.followers.active.count

%nav#friend-nav
  = render 'shared/friendship_button', user: user, own_profile: false

  %ul#js-friendship-counts
    %li
      = link_to me_user_links_path(user) do
        %span= links_count
        = "Share".pluralize(links_count)
    %li#js-following-count
      = link_to user_following_path(user) do
        %span= following_count
        Following
    %li#js-followers-count
      = link_to user_followers_path(user) do
        %span= followers_count
        = "Followers".pluralize(followers_count)

  - if user_signed_in? && (user.blank? || user == current_user)
    = link_to 'Invite and Tag Your Contacts', invite_path, class: 'invite'
