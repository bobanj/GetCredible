%nav#friend-nav
  %ul
    %li
      = link_to user_following_path(user) do
        %span= user.followings.count
        Following
    %li
      = link_to user_followers_path(user) do
        %span= user.followers.count
        Followers

  - if user_signed_in? && (@user.blank? || @user == current_user)
    = link_to 'Invite and Tag Your Contacts', invite_path, :class => 'invite'
