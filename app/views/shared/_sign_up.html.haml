- resource.change_error_message(:username, "This username is already registered. Want to #{link_to('login',new_session_path(resource_name))} or #{link_to('recover your password',new_password_path(resource_name))}?")
- resource.change_error_message(:email, "This email is already registered. Want to #{link_to('login',new_session_path(resource_name))} or #{link_to('recover your password',new_password_path(resource_name))}?")
%section.devise.sign_up
  %header#page-header
    %h1 Sign Up

  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :namespace => 'sign_up', :html => {:id => 'user_sign_up'}) do |f|
    %ul.inputs-list.bg
      %li= f.input :username, :required => false, :autofocus => true, :placeholder => "Username"
      %li= f.input :email, :placeholder => "Email"
      %li= f.input :password, :placeholder => "Password"
      %li.buttons_left= f.button :submit, "Sign up", class: 'btn large primary'
    %br
