%ul
  - contacts.each do |contact|
    - user = users.detect{ |user| user.twitter_handle == contact.screen_name }
    %li
     
      = image_tag contact.avatar if contact.avatar
      %span.name= contact.name
      %span.user= contact.screen_name
      - if user
        = link_to "GiveBrand Profile", me_user_path(user)
      %span.status
        - if contact.invited?
          Invited!
        - else
          = link_to "Invite", "#", :class => 'twitter_contact btn primary small light right', :"data-twitter_id" => contact.twitter_id, :"data-screen_name" => contact.screen_name

= will_paginate @contacts
