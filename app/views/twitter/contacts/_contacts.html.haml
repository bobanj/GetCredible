%ul
  - contacts.each do |contact|
    %li
      = contact.name
      = contact.screen_name
      = image_tag contact.avatar if contact.avatar
      %span.status
        - if contact.invited?
          Invited!
        - else
          = link_to "Invite", "#", :class => 'twitter_contact', :"data-twitter_id" => contact.twitter_id, :"data-screen_name" => contact.screen_name

= will_paginate @contacts
