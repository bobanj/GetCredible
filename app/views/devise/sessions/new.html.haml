#content
  %section#devise
    %header#page-header
      %h1 Sign In

    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %ul.inputs
        %li= f.input :email, :required => false, :autofocus => true
        %li= f.input :password, :required => false
        %li.checkboxes= f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
        %li.buttons_left= f.button :submit, "Sign in", class: 'btn large primary'
      %br
%aside
  = render "links"
