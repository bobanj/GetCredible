#content
  %section#devise
    %header#page-header
      %h1 Change your password
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
      = f.error_notification
      = f.input :reset_password_token, :as => :hidden
      = f.full_error :reset_password_token
      %ul.inputs
        %li= f.input :password, :label => "New password", :required => true
        %li= f.input :password_confirmation, :label => "Confirm your new password", :required => true
        %li= f.button :submit, "Change my password", class: 'btn large primary'
%aside
  = render "links"

