- content_for :styles do
  = stylesheet_link_tag 'profile', :media => 'all'

#content
  %section#profile.edit
    .details
      .photo
        = image_tag current_user.avatar_url(:thumb), :width => '126', :height => 126

      = simple_form_for(current_user, :as => :user, :url => registration_path(:user), :html => {:multipart => true}) do |f|
        %ul
          %li.name= f.input :first_name, :wrapper => false
          %li.name= f.input :last_name, :wrapper => false
          %li.name= f.input :job_title, :wrapper => false
          %li= f.input :country, :wrapper => false
          %li= f.input :city, :wrapper => false
          %li= f.input :personal_url, :wrapper => false
          %li= f.input :twitter_handle, :wrapper => false
          %li= f.input :avatar, :as => :file, :wrapper => false
          %li= f.hidden_field :avatar_cache
          %li.twitter
            = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, :wrapper => false
          %li= f.button :submit, "Save", class: 'btn primary large'

