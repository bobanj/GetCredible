#content
  %section#profile.edit
    .details
      .photo
        = image_tag current_user.avatar_url(:thumb), :width => '126', :height => 126

      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, :method => :put }) do |f|
        %ul
          %li= f.input :first_name, :wrapper => false
          %li= f.input :last_name, :wrapper => false
          %li= f.input :job_title, :wrapper => false
          %li= f.input :country, :wrapper => false
          %li= f.input :city, :wrapper => false
          %li= f.input :personal_url, :wrapper => false
          %li= f.input :twitter_handle, :wrapper => false
          %li= f.input :avatar, :as => :file, :wrapper => false
          %li= f.hidden_field :avatar_cache
          %li= f.button :submit, "Save", class: 'btn primary large'
  = render :partial => 'shared/tag_cloud'

%aside
  = render :partial => 'shared/sidebar_nav', :locals => { :user => current_user }
  = render :partial => 'shared/sidebar_activity', :locals => { :user => current_user }
