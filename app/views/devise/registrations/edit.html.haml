#content
  %section#profile.edit
    .details
      .photo
        = image_tag current_user.avatar_url(:thumb), :width => '126', :height => 126

      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, :method => :put }) do |f|
        %ul
          %li= f.input :first_name, :wrapper => false
          %li= f.input :last_name, :wrapper => false
          %li= f.input :job_title, :wrapper => false
          %li= f.input :country, :wrapper => false
          %li= f.input :city, :wrapper => false
          %li= f.input :personal_url, :wrapper => false
          %li= f.input :twitter_handle, :wrapper => false
          %li= f.input :avatar, :as => :file, :wrapper => false
          %li= f.hidden_field :avatar_cache
          %li.twitter
            = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true
          %li= f.button :submit, "Save", class: 'btn primary large'

  %section#tags
    #add-tag
      .inner{:style => "padding-left: 20px;"}
        %h3 You can remove the tags you don't like

    = image_tag "ajax_loader.gif", :id => 'tag-could-loader', :style => "display:none;"
    = tag_cloud(@user)

    #tag-msg
      %span.icon
      %a{:href => '#'}
        John Smith
      ,
      %a{:href => '#'}
        Marting Berg
      and 11 other people tagged or vouched you so far.



%aside

  %nav#profile-nav
    .photo
      %a= image_tag current_user.avatar_url(:avatar)

    .my-actions
      ="Welcome #{current_user.first_name}"
      %br
      = link_to 'Edit profile', edit_user_registration_path, :class => 'xxl'
      &bull;
      = link_to "Logout", destroy_user_session_path, :class => 'xxl'

  #latest-activity
    %h2 Latest incoming activity
    %ul.unstyled
      %li
        %span.icon
        Janko Jovanovic tagged you as enterpreneur

    = link_to 'View all incoming activity â–º', ''
