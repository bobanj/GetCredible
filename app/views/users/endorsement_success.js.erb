$("#write_endorsement_form .loader").addClass('hide');
$("#write_endorsement_description").val('');
$("#write_endorsement_tag").val('');
var noEndorsements = $("#js-no-endorsements");
if(noEndorsements.length){
  noEndorsements.remove();
}
var userTagEndorsementContainer = $("#endorse_<%=@user_endorsement.user_tag_id-%>_container");
var userTagEndorsement = '<%=escape_javascript(render 'shared/user_tag_endorsement', user_tag: @user_tag, endorsements: @user_tag.endorsements.latest) %>';
if(userTagEndorsementContainer.length){
  userTagEndorsementContainer.replaceWith(userTagEndorsement);
} else {
  $("#endorsements_list").prepend(userTagEndorsement);
}
$.getCredible.displayNotification('success', 'You have successfully endorsed <%=escape_javascript @user.short_name %>');
<% unless @already_has_tag %>
$.getCredible.updateTagCloud();
<% end %>
mixpanel.track("Endorsement create");
