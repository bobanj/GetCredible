#content
  %section#profile.edit
    .details
      = simple_form_for(resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put }) do |f|
        %h1 Set your profile
        = f.hidden_field :invitation_token
        %ul.inputs-list.left
          %li= f.input :username, :label => 'Username: http://givebrand.to/', :wrapper => false
          %li= f.input :password, :wrapper => false
          %li= f.input :password_confirmation, :wrapper => false
          %li.buttons= f.button :submit, "Save", class: 'btn primary large'