- title("Search results for '#{params[:q]}' on Givebrand")

#content
  %section#search
    .content
      %header#page-header
        %h1
          Search results for
          %em
            = "'#{params[:q]}'"

      .feed
        %ul.list-view.unstyled

          - @users.each do |user|
            %li
              .content
                .photo
                  - if user.active?
                    = link_to image_tag(user.avatar.url(:avatar)), me_user_path(user)
                  - else
                    = image_tag(user.avatar.url(:avatar))
                %h2= user_title(user)
                %br
                .details

                  - if current_user && user.interacted_by(current_user)

                    = "You interacted with #{user.name}â€™s profile."

                  - top_tags = user.top_tags(3)
                  - if top_tags.present?
                    Top Tags:
                    = raw top_tags.collect { |top_tag| tag_link(top_tag.name) }.join(", ")

      = will_paginate @users, :renderer => PaginationNoFollow

%aside
