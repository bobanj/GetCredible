#content
  %section#search
    %header#page-header
      - if params[:q].present?
        %h1
          Search results for
          %em
            = "'#{params[:q]}'"
      - elsif params[:tag].present?
        %h1
          Search results for tag
          %em
            = "'#{params[:tag]}'"
      - else
        %h1 Latest profiles


    .feed
      %ul.list-view.unstyled

        - @users.each do |user|
          %li
            .content
              .photo
                = link_to user do
                  = image_tag user.avatar.url(:avatar)
              %h2
                = link_to(user.full_name, me_user_path(user))
                ,
                = user.job_title
              .details

                - if current_user && user.interacted_by(current_user)
                  .icon
                  = "You interacted with #{user.full_name}â€™s profile."

                - top_tags = user.top_tags(3)
                - if top_tags.present?
                  Top Tags:
                  =raw top_tags.collect { |top_tag| tag_link(top_tag.name) }.join(", ")


    = will_paginate @users

%aside
  = render :partial => 'shared/sidebar_nav', :locals => { :user => current_user }
  = render :partial => 'shared/sidebar_activity', :locals => { :user => current_user }
