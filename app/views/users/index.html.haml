#content
  %section#search
    %header#page-header
      - if params[:q].present?
        %h1
          Search results for
          %em
            = "'#{params[:q]}'"
      - else
        %h1 Latest profiles


    .feed
      %ul.list-view.unstyled

        - @users.each do |user|
          %li
            .content
              .photo
                = link_to user do
                  = image_tag user.avatar.url(:avatar)
              %h2
                = link_to(user.full_name, user_path(user))
                ,
                = user.job_title
              .details

                - if user.interacted_by(current_user)
                  .icon
                  = "You interacted with #{user.full_name}â€™s profile."

                - top_tags = top_tags(user)
                - if top_tags.present?
                  = "Top tags: #{top_tags.join(', ')}"


    .pagination
      = will_paginate @users

%aside
  = render :partial => 'shared/sidebar_nav', :locals => { :user => current_user }
  = render :partial => 'shared/sidebar_activity'
