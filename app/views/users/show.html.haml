- content_for :meta_tags do
  %meta{ :property => "og:title", :content => "Help boost my influence at givebrand.to!" }
  %meta{ :property => "og:type", :content => "article" }
  %meta{ :property => "og:url", :content => me_user_url(@user) }
  %meta{ :property => "og:site_name", :content => "Give Brand" }
  %meta{ :property => "og:description", :content => "Help boost my influence at givebrand.to!" }
  %meta{ :property => "og:image", :content => user_avatar_url(@user) }
  - # Google Plus
  %meta{:content => "Help boost my influence at givebrand.to!", :itemprop => "name"}
  %meta{:content => "Help boost my influence at givebrand.to!", :itemprop => "description"}/
  - if @user.avatar
    %meta{:content => url_for(@user.avatar_url(:thumb)), :itemprop => "image"}/

- unless Rails.env.test? # stop warnings when running specs
  - content_for :javascripts do
    = render 'shared/social_networks_scripts'

#login_dialog{style: "display: none", title: ""}
  %p.note Almost there! Sign up to join GiveBrand or login to your account.
  = render 'shared/sign_in'
  = render 'shared/sign_up', :resource => User.new, :resource_name => :user
  = hidden_field_tag :word_id_after_login
  = hidden_field_tag :tag_names_after_login
  = hidden_field_tag :endorse_after_login

#content
  = render 'shared/profile'
  = render 'shared/tag_cloud', can_delete: false
  = render 'shared/endorsements'

  %ul.social_fixed
    %li
      %a.twitter-share-button{'data-count' => "vertical", "data-text" => "Help boost my influence at givebrand.to! #{me_user_url(@user)} #givebrand via @givebrand", :href => "https://twitter.com/share"} Tweet
    %li
      .fb-like{"data-href" => me_user_url(@user), "data-layout" => "box_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "56"}
    %li
      %script{"data-counter" => "top", "data-url" => me_user_url(@user), :type => "IN/Share"}
    %li
      %g:plusone{:href => me_user_url(@user), :size => "tall"}
    -# %li
    -#   %a.pin-it-button{"count-layout" => "vertical", :href => "http://pinterest.com/pin/create/button/?url=#{u(me_user_url(@user))}&media=#{request.protocol}#{request.host_with_port}#{asset_path("logo.png")}&description=Description"}
    -#     %img{:border => "0", :src => "//assets.pinterest.com/images/PinExt.png", :title => "Pin It"}/

%aside
  - if user_signed_in? && @user == current_user
    = render 'shared/sidebar_nav'
  = render 'shared/friend_nav', user: @user
  = render 'shared/sidebar_activity', :user => @user
