- content_for :meta_tags do
  %meta{ :property => "og:title", :content => "Help build my brand at givebrand.to!" }
  %meta{ :property => "og:type", :content => "article" }
  %meta{ :property => "og:url", :content => me_user_url(@user) }
  %meta{ :property => "og:site_name", :content => "Give Brand" }
  %meta{ :property => "og:description", :content => "Help build my brand at givebrand.to! #{me_user_url(@user)}" }
  %meta{ :property => "og:image", :content => user_avatar_url(@user) }

:javascript
  var _tags = #{@user.tags.map(&:name)};

#login_dialog{style: "display: none", title: ""}
  = render 'shared/sign_in'
  = render 'shared/sign_up', :resource => User.new, :resource_name => :user

#content
  %section#profile
    .details
      .photo
        = image_tag @user.avatar_url(:thumb)
      %h1= @user.full_name
      %h2= @user.job_title
      %ul
        - unless @user.city.blank?
          %li.location
            %span.icon
            = @user.city
        - unless @user.personal_url.blank?
          %li.web
            %span.icon
            - #TODO create url for given addr ex google.com
            = link_to @user.personal_url, @user.personal_url, :target => '_blank'
        - unless @user.twitter_handle.blank?
          %li.twitter
            %a.twitter-follow-button{"data-show-count" => "false", :href => "https://twitter.com/#{@user.twitter_handle}"}="Follow @#{@user.twitter_handle}"
            :javascript
              !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
  %ul.social_fixed
    %li
      %a.twitter-share-button{"data-hashtags" => "givebrand",'data-count' => "vertical", "data-text" => "Help build my brand at givebrand.to! ", "data-via" => "givebrand", :href => "https://twitter.com/share"} Tweet
      :javascript
        !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
    %li
      %script{:src => "//platform.linkedin.com/in.js", :type => "text/javascript"}
      %script{"data-counter" => "top", :type => "IN/Share"}

  = render :partial => 'shared/tag_cloud'

%aside
  - if current_user
    = render :partial => 'shared/sidebar_nav', :locals => { :user => current_user }
  = render :partial => 'shared/sidebar_activity', :locals => { :user => @user }
