- @links.each do |link|
  %li.link_details
    %header
    - if link.thumbnail_url.present?
      = image_tag link.thumbnail_url
    .link_text
      %h2= link_to link.title, link.url, target: '_blank'
      - if current_user && current_user == @user
        = link_to "Delete", user_link_path(current_user, link), method: :delete, data: { confirm: "Are you sure you want to delete this link?" }, class: 'btn primary small right red'
      %p= link.description
      %ul.link_tags
        - link.tags.each do |tag|
          %li.token-input-token-facebook
            %p= link_to tag.name, search_path(q: tag.name)
